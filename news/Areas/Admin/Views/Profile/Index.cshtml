@{
    ViewBag.Title = "Profile || " + Session["CurrentUserName"];
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@foreach (var person in ViewBag.user)
{
    <div class="content">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="title">Profile</h5>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="row">
                                <div class="col-md-5 pr-1">
                                    <div class="form-group">
                                        <label>Company</label>
                                        <input type="text" class="form-control" disabled="" placeholder="Company" value="ChangChang Inc.">
                                    </div>
                                </div>
                                <div class="col-md-3 px-1">
                                    <div class="form-group">
                                        <label>Username</label>
                                        <input type="text" class="form-control" disabled="" placeholder="Username" value="@person.Username">
                                    </div>
                                </div>
                                <div class="col-md-4 pl-1">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Email address</label>
                                        <input type="email" class="form-control" disabled="" placeholder="@person.Email">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 pl-1">
                                    <div class="form-group">
                                        <label>Full Name</label>
                                        <input type="text" class="form-control" disabled="" placeholder="Last Name" value="@person.FullName">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Address</label>
                                        <input type="text" class="form-control" disabled="" placeholder="Home Address" value="@person.Address">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 pr-1">
                                    <div class="form-group">
                                        <label>City</label>
                                        <input type="text" class="form-control" disabled="" placeholder="City" value="@person.City">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>About Me</label>
                                        <textarea rows="4" cols="80" class="form-control" disabled="" placeholder="Here can be your description">@person.description</textarea>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card" style="height: 100%">
                    <div style="height: 35%">
                        @if (person.wallpaperurl != null)
                        {
                            <img src="~/Content/upload/img/profile/background/@person.wallpaperurl" style="width: 100%; position:absolute; z-index: 0" alt="...">
                        }

                    </div>
                    <div class="card-body" style=" z-index: 100">
                        <div style="text-align: center;text-transform: none;margin-top: 20px;">
                            <a href="#">
                                @if (@person.imgurl != null)
                                {
                                    <img style="width: 124px;height: 124px; overflow: hidden;border:solid gray;border-radius: 50%;margin-bottom: 15px;" class="avatar border-gray" src="~/Content/upload/img/profile/personal/@person.imgurl" alt="...">
                                }
                                <h5 class="title">@person.FullName</h5>
                            </a>
                            <p class="description">

                                <i>@@@person.Username</i>
                            </p>
                        </div>
                        @if (person.description != null)
                        {
                            <blockquote class="description text-center">
                                <q>@person.description</q>
                            </blockquote>
                        }

                    </div>

                </div>
            </div>
        </div>
    </div>

    @Html.ActionLink("Edit Profile", "Edit", new { id = Session["IdUser"] }, new { @class = "btn btn-outline-primary" })

}


