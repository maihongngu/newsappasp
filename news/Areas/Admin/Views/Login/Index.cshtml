@model news.Models.LoginMD
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/loginlayout.cshtml";
}

    <body>
        <div class="container">
            <div class="row" style="margin-top:250px">
                <div class="col-md-4 col-md-offset-4">
                    <div class="panel panel-danger">
                        <div class="panel-heading">
                            <h3 class="panel-title" style="text-align:center">Mời đăng nhập Admin</h3>
                        </div>
                        <div class="panel-body">
                            <div class="col-lg-12" style="text-align:center">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken();
                                    @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                                    <div class="form-group">
                                        <div class="form-label-group">
                                            @Html.TextBoxFor(Model => Model.username, new { @id = "inputEmail", @class = "form_control", @placeholder = "Emial address", @required = "required" })
                                            <label for="inputEmail"></label>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="form-label-group">
                                            @Html.PasswordFor(Model => Model.password, new { @id = "inpupassword", @class = "form_control", @placeholder = "password", @required = "required" })
                                            <label for="inpupassword"></label>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-danger btn-block" style="text-align:center;display: inline-block">login</button>
                                }
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        </div>
    </body>

